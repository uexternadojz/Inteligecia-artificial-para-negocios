---
interface Props {
  items: ReadonlyArray<{ title: string; description: string; badge: string }>;
}

const { items } = Astro.props;
---

<section class="grid gap-6 md:grid-cols-3">
  {items.map((item) => (
    <article class="panel-orbital relative overflow-hidden rounded-3xl p-6 transition duration-300 hover:-translate-y-1 hover:border-red-400/60">
      <div class="absolute -right-16 -top-16 h-32 w-32 rounded-full bg-red-500/30 blur-2xl" />
      <span class="inline-flex items-center gap-1 rounded-full border border-white/10 bg-white/10 px-3 py-1 text-[10px] uppercase tracking-[0.4em] text-red-200">
        {item.badge}
      </span>
      <h2 class="mt-4 font-rajdhani text-2xl text-white">{item.title}</h2>
      <p class="mt-3 text-sm text-slate-200/80">{item.description}</p>
    </article>
  ))}
</section>
