---
interface Props {
  items: ReadonlyArray<{ question: string; answer: string }>;
}

const { items } = Astro.props;
---

<section id="roadmap" class="rounded-3xl border border-white/10 bg-[#090916]/85 p-8">
  <header class="mb-6">
    <h2 class="font-rajdhani text-2xl text-white">Preguntas frecuentes</h2>
    <p class="text-sm text-slate-300/70">Cerramos cada jornada con roadmap, recursos y soporte.</p>
  </header>

  <div class="flex flex-col divide-y divide-white/10">
    {items.map((item, idx) => (
      <details class="group py-4 transition duration-200 hover:bg-white/5">
        <summary class="flex cursor-pointer list-none items-center justify-between gap-4 text-left">
          <span class="font-rajdhani text-lg text-white">{item.question}</span>
          <span class="rounded-full border border-white/10 px-3 py-1 text-xs uppercase tracking-[0.3em] text-slate-400/70">
            {idx === 0 ? "New" : "Info"}
          </span>
        </summary>
        <p class="mt-3 max-w-3xl text-sm text-slate-300/80">{item.answer}</p>
      </details>
    ))}
  </div>
</section>
